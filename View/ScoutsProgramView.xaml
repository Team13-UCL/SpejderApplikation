<Window x:Class="SpejderApplikation.View.ScoutsProgramView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpejderApplikation.View"
        mc:Ignorable="d"
        Title="ScoutsProgramView" Height="500" Width="800">
    <Grid Margin="10">
        <!-- Define two rows: one for the badges and one for buttons, checkbox, and search -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Badge Icons Row -->
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Grid.Row="0"
                Width="604">
            <!-- Placeholder rectangles for scout badge icons -->
            <Button Width="65"
                Height="65"
                Margin="5"
                Background="Transparent"
                BorderBrush="Transparent">
                <!--="OnFamilyScoutClick">-->
                <Image x:Name="FamilieSpejder" Source="pack://application:,,,/Images/FamilieSpejder.png"
                   Stretch="Uniform" />
            </Button>
            <Button Width="65"
                Height="65"
                Margin="5"
                Background="Transparent"
                BorderBrush="Transparent">
                <!--="OnBeaverScoutClick">-->
                <Image x:Name="BæverSpejder" Source="pack://application:,,,/Images/BæverSpejder.png"
                   Stretch="Uniform" />
            </Button>
            <Button Width="65" Height="65" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <!--="OnWolfScoutClick"-->
                <Image x:Name="UlveSpejder" Source="pack://application:,,,/Images/UlveSpejder.png"
                   Stretch="Uniform" />
            </Button>
            <Button Width="65" Height="65" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <!--Click="OnJuniorScoutClick">-->
                <Image x:Name="JuniorSpejder" Source="pack://application:,,,/Images/JuniorSpejder.png"
                   Stretch="Uniform" />
            </Button>
            <Button Width="65" Height="65" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <!--Click="OnTroopScoutClick">-->
                <Image x:Name="TropSpejder" Source="pack://application:,,,/Images/TropSpejder.png" Stretch="Uniform" />
            </Button>
            <Button Width="65" Height="65" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <!--Click="OnSeniorScoutClick">-->
                <Image x:Name="SeniorSpejder" Source="pack://application:,,,/Images/SeniorSpejder.png"
                   Stretch="Uniform" />
            </Button>
            <Button Width="65" Height="65" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <!--Click="OnRoverScoutClick">-->
                <Image x:Name="RoverSpejder" Source="pack://application:,,,/Images/RoverSpejder.png" Stretch="Uniform" />
            </Button>
        </StackPanel>

        <!-- Second Row: Logo, Checkbox, Buttons, and Search -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10">
            <!-- Placeholder for Logo -->

            <!-- Checkbox -->
            <CheckBox Content="Vis gamle møder" VerticalAlignment="Center" Margin="10,0" />

            <!-- Task Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0">
                <Button Content="Opret opgave" Width="90" Background="LightGreen" Margin="5,0" Height="25" Command="{Binding NewCommand}" />
                <Button Content="Rediger opgave" Width="90" Background="Gold" Margin="5,0" Height="25" />
                <Button Content="Slet Opgave" Width="90" Background="LightCoral" Margin="5,0" Height="25" />
                <Button Content="Gem I database" Width="90" Background="LightBlue" Margin="5,0" Height="25" />
            </StackPanel>

            <!-- Search Button -->
            <Button Content="Søg" Width="60" Background="LightPink" Margin="10,0" Height="25" />
        </StackPanel>

        <!-- DataGrid Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" x:Name="ScoutDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" RowHeight="40" ItemsSource="{Binding ScoutMeetings}" SelectedItem="{Binding SelectedScoutMeeting}">

                <DataGrid.Columns>
                    <!-- Define columns as per your wireframe -->
                    <DataGridTextColumn Header="Dato" Binding="{Binding Date}" Width="1*" />
                    <DataGridTextColumn Header="Tid"
                                        Binding="{Binding Time, Mode=TwoWay}" Width="1*" />
                    <DataGridTemplateColumn Header="Mærke" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="40" Height="40"                       Source="{Binding Picture}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Aktivitet" Binding="{Binding Activity}" Width="1*" />
                    <DataGridTextColumn Header="Husk" Binding="{Binding Notes}" Width="1*" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="2" Orientation="Vertical">
                <DatePicker Name="MeetingDP" Width="auto" Height="auto" Text="{Binding Date}"/>
                <TextBox Name="StartTP" Width="auto" Height="auto" Text="{Binding Start, FallbackValue=00:00:00, TargetNullValue=00:00:00}"/>
                <TextBox Name="StopTP" Width="auto" Height="auto" Text="{Binding Stop, FallbackValue=00:00:00, TargetNullValue=00:00:00}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="NewDatebtn" Width="auto" Height="auto" Content="Ny møde" Grid.Column="0"/>
                    <Button Name="UpdateDatebtn" Width="auto" Height="auto" Content="Rediger møde" Grid.Column="1"/>
                    <Button Name="SaveDatebtn" Width="auto" Height="auto" Content="Gem opdatering" Grid.Column="2"/>
                </Grid>
                <TextBox Name="BadgeNametb" Width="auto" Height="auto" Text="{Binding BadgeName, TargetNullValue=Mærke, FallbackValue=Mærke}"/>
                <TextBox Name="Descriptiontb" Width="auto" Height="auto" Text="{Binding BadgeDescription, TargetNullValue=Beskrivelse, FallbackValue=Beskrivelse}"/>
                <Grid Height="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="Linktb" Text="{Binding BadgeLink, FallbackValue=Link, TargetNullValue=Link}"/>
                    <Button Name="Picturebtn" Width="auto" Height="auto" Content="Billede" Grid.Column="1" Command="{Binding DownloadCommand}"/>
                </Grid>
                <Grid Height="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="NewBadgebtn" Width="auto" Content="Nyt mærke" Grid.Column="0"/>
                    <Button Name="UpdateBadgebtn" Width="auto" Content="Rediger mærke" Grid.Column="1"/>
                    <Button Name="SaveBadgebtn" Width="auto" Content="Gem opdatering" Grid.Column="2"/>
                </Grid>
                <TextBox x:Name="Activitytb" Width="auto" Height="auto" Text="{Binding Activity, FallbackValue=Aktivitet, TargetNullValue=Aktivitet}"/>
                <TextBox Name="Preparationtb" Width="auto" Height="40" Text="{Binding Preparation, FallbackValue=Forberedelse, TargetNullValue=Forberedelse}"/>
                <TextBox Name="Notestb" Width="auto" Height="auto" Text="{Binding Notes, FallbackValue=Noter, TargetNullValue=Noter}"/>
                <Grid Height="auto">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="NewActivitybtn" Content="Ny møde" Grid.Column="0"/>
                    <Button Name="UpdateActivitybtn" Width="auto" Content="Rediger møde" Grid.Column="1"/>
                    <Button Name="SaveActivitybtn" Width="auto" Content="Gem opdatering" Grid.Column="2"/>
                </Grid>
                <TextBox Name="Unittb" Text="{Binding UnitName, TargetNullValue=Enhed, FallbackValue=Enhed}" Width="auto" Height="auto"/>
                <TextBox Name="UnitDescriptiontb" Text="{Binding UnitDescription, FallbackValue=Beskrivelse, TargetNullValue=Beskrivelse}"/>
                <Grid Height="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="UnitLinktb" Text="{Binding UnitLink, FallbackValue=Link, TargetNullValue=Link}" Grid.Column="0"/>
                    <Button Name="UnitLinkbtn" Content="Billede" Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </Grid>

        <ComboBox HorizontalAlignment="Left" Margin="698,14,0,0" VerticalAlignment="Top" Width="72" />
        <Image Margin="-16,-6,677,47" Source="/Images/KFUMSpejderne.png" Stretch="Fill" />

    </Grid>
</Window>
